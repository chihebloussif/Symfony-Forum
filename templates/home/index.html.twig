{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin-left: 700px;margin-top:40px; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
   
</style>
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Welcome To Our Community</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mx-auto" >
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{ path('home') }}">Home</a>
        </li>
        <li class="nav-item" >
          <a class="nav-link" href="{{ path('problem_index') }}">Problems</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('answer_index') }}">Answers</a>
        </li>
        
      </ul>
       
    </div>
  </div>
  {% if app.user %}
         <div class="d-flex" me-auto>
  
        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">{{app.user.email}}</a><br>
        <a class="btn btn-danger" style="margin-right:10px"  href="{{ path('app_logout') }}">Logout</a>
      </div>
    {% endif %}

</nav>
<div class="example-wrapper">
<h1>Here you can browse questions </h1>
</div>

  <table class="table" style="margin-left:100px;margin-top:20px;color:grey;  font: 25px/1.5 sans-serif;"> 

   <thead>
            <tr>
                <th>Questions</th>
                <th>Answers</th>
            
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
        {% for problem in problems %}
        
            <tr>
            
                <td>{{ problem.text }}</td> 
                
                <td>{{ answer.text }}</td> 
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('problem_show', {'id': problem.id}) }}">show</a>
                </td>       
            </tr>
        {% else %}
            <tr>
                <td>no records found</td>
            </tr>
        {% endfor %}
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
