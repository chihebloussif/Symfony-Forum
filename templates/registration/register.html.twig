{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 style="margin-left:750px;margin-top:15px">Register</h1>
   <div style="margin-left:750px;">
    {{ form_start(registrationForm) }}
     <div style="padding:10px" >    {{ form_row(registrationForm.email) }}</div>
    <div style="padding:10px" >     {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}</div>
     <div style="padding:10px" >   {{ form_row(registrationForm.agreeTerms) }} </div>

        <button style="width:7%;margin-left:10px;margin-top:20px" type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}

    </div>
{% endblock %}
