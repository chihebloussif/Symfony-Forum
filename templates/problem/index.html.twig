{% extends 'base.html.twig' %}

{% block title %}Problem index{% endblock %}

{% block body %}

 <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Welcome To Our Community</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mx-auto" >
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{ path('home') }}">Home</a>
        </li>
        <li class="nav-item" >
          <a class="nav-link" href="{{ path('problem_index') }}">Problems</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('answer_index') }}">Answers</a>
        </li>
        
      </ul>
       
    </div>
  </div>
  {% if app.user %}
         <div class="d-flex" me-auto>
  
        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">{{app.user.email}}</a><br>
        <a class="btn btn-danger" style="margin-right:10px"  href="{{ path('app_logout') }}">Logout</a>
      </div>
    {% endif %}

</nav>
    <h1 style="margin-left:600px;margin-top:15px">Problems Manager</h1>

    <table class="table table-primary table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for problem in problems %}
            <tr>
                <td>{{ problem.id }}</td>
                <td>{{ problem.text }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('problem_show', {'id': problem.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('problem_edit', {'id': problem.id}) }}">edit</a>
                   <a class="btn"> {{ include('problem/_delete_form.html.twig') }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('problem_new') }}">Create new</a>
{% endblock %}
